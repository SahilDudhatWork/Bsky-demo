{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/oauth/client-metadata.json",
            "destination": "/client/oauth/client-metadata.json"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ]
}